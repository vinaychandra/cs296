set boxwidth 0.3
set style fill solid
set xlabel "Iteration Number"
set ylabel "Time"
set auto x
set offset 0,0,.5,.5
set autoscale fix
#set datafile separator ","

plot "./data/average.dat" using 1:3 title columnheader with lines
max_y = GPVAL_DATA_Y_MAX
min_y = GPVAL_DATA_Y_MIN

plot "./data/average.dat" u ($3 == min_y ? $3 : 1/0):1
min_pos_x = GPVAL_DATA_Y_MIN
plot "./data/average.dat" u ($3 == max_y ? $3 : 1/0):1
max_pos_x = GPVAL_DATA_Y_MAX


set term png
set output "./plots/g31_plot01.png"

set arrow 1 from min_pos_x, min_y+0.3 to min_pos_x, min_y+0.02 lw 1.0
set arrow 2 from max_pos_x, max_y+0.3 to max_pos_x, max_y+0.02 lw 1.0
set label 1 at min_pos_x, min_y+0.3 "min" center offset 1,0.2
set label 2 at max_pos_x, max_y+0.3 "max" center offset 1,0.2

plot "./data/average.dat" using 1:2 title columnheader with boxes,\
"./data/average.dat" using 1:3 title columnheader with lines


